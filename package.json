{
  "name": "ark-cross-server-chat",
  "version": "1.0.0",
  "description": "Modern web-based cross-server chat system for Ark Survival Evolved with real-time messaging, mobile-responsive UI, and Docker support",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node scripts/test-rcon.js",
    "test:chat": "node scripts/test-chat.js",
    "test:chars": "node scripts/test-turkish-chars.js",
    "test:crossbot": "node scripts/test-cross-server-bot.js",
    "docker:build": "docker build -t ark-cross-server-chat .",
    "docker:run": "docker run -d -p 3000:3000 ark-cross-server-chat"
  },
  "keywords": [
    "ark",
    "survival",
    "evolved",
    "chat",
    "cross-server",
    "rcon",
    "gaming",
